<div id="weeks">
  <% @weeks.each do |week| %>
    <h2><%= week.title %></h2>
    <div id="codes">
      <% week.codes.each do |code| %>
          <span><%= code.description %></span>
          <p>
            <%= link_to "Resposta", code %>
          </p>
          <hr>
      <% end %>
    </div>
  <% end %>
</div>

